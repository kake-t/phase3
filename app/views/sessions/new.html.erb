<!-- フラッシュメッセージ -->
<% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "Log in" %>
<% end %>
