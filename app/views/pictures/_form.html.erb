<div class="container">
  <%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
  <!-- エラー表示 -->
  <% if @picture.errors.any? %>
    <div class="alert alert-danger">
      <% @picture.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, accept:'image/jpg, image/jpeg, image/gif, image/png' %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'タイトルを入力してください' %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', placeholder: 'コメントを入力してください' %>
    <br>
    <%= form.submit class: 'btn btn-default'%>
  </div>
  <% end %>
</div>
