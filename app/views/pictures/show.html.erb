<!-- show -->
<div class="container text-center">
  <div class="panel panel-success none-margin">
    <div class="panel-heading">
  <p><%= @picture.title %></p>
  <p>投稿者：<%= @picture.user_name %></p>
</div>
</div>
<div class="panel-body panel-body-background-color">
  <p><%= image_tag @picture.image %></p>
  <p><%= @picture.content %></p>
</div>
</div>

<!-- お気に入りボタン -->
<% unless @picture.user == current_user %>
  <div class="container text-center">
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入り登録', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>
